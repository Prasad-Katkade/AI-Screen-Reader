{
  "manifest_version": 3,
  "name": "AI-Screen-Reader",
  "version": "1.0",
  "description": "screen reader",
  "author": "",
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "tabCapture",
    "downloads",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ]
}